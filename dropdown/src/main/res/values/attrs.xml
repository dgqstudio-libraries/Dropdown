        <attr name="headerStartPadding" format="dimension" />
        <attr name="headerEndPadding" format="dimension" />
        <attr name="headerBottomPadding" format="dimension" />
        <attr name="headerBackgroundColor" format="color|reference" />

        <attr name="contentPadding" format="dimension" />
        <attr name="contentTopPadding" format="dimension" />
        <attr name="contentStartPadding" format="dimension" />
        <attr name="contentEndPadding" format="dimension" />
