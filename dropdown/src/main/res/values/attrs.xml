<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="Dropdown">

        <attr name="dropdownCollapsedByDefault" format="boolean" />

        <attr name="dropdownTitle" format="string" />
        <attr name="dropdownTitleStyle" format="reference" />
