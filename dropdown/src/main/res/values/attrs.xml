        <attr name="dropdownExpandedButtonSrc" format="reference" />
        <attr name="dropdownCollapsedButtonSrc" format="reference" />
        <attr name="dropdownShowDivider" format="boolean" />

        <attr name="headerPadding" format="dimension" />
